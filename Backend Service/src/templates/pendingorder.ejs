<%- include('partials/email-top', { subject: 'Your order has been placed', subtitle: 'Order received' }) %>

<p style="margin:0 0 14px 0;">Hello <%= name %>,</p>
<p style="margin:0 0 18px 0;color:#374151;">
  Thanks for your order. We’re processing it now and will ship it soon.
</p>

<div style="margin:18px 0 10px 0;font-weight:700;">Items</div>
<table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="border-collapse:collapse;">
  <% (products || []).forEach(function(product){ %>
    <tr>
      <td style="padding:10px 0;border-top:1px solid #f1f5f9;vertical-align:top;width:72px;">
        <% if (product && product.img) { %>
          <img src="<%= product.img %>" alt="" width="60" height="60" style="display:block;border-radius:12px;object-fit:cover;" />
        <% } %>
      </td>
      <td style="padding:10px 0;border-top:1px solid #f1f5f9;vertical-align:top;">
        <div style="font-weight:700;color:#111827;">
          <%= product.title || 'Product' %>
        </div>
        <div style="font-size:13px;color:#6b7280;margin-top:2px;">
          <% if (product.quantity) { %>Qty: <%= product.quantity %> · <% } %>
          Price: $<%= product.price %>
        </div>
      </td>
    </tr>
  <% }) %>
</table>

<% if (typeof storeUrl !== 'undefined' && storeUrl) { %>
  <div style="margin-top:18px;">
    <a href="<%= storeUrl %>" style="display:inline-block;background:#c17f59;color:#ffffff;text-decoration:none;padding:12px 18px;border-radius:9999px;font-family:Arial, sans-serif;font-weight:700;font-size:14px;">
      Visit store
    </a>
  </div>
<% } %>

<p style="margin:18px 0 0 0;color:#374151;">
  Need help? Contact us at
  <a href="mailto:support@cosmo-ticks.com" style="color:#c17f59;text-decoration:none;">support@cosmo-ticks.com</a>.
</p>

<%- include('partials/email-bottom') %>
