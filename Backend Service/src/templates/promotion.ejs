<%- include('partials/email-top', { subject: 'Cosmo-ticks: Weekly picks', subtitle: 'Weekly picks' }) %>

<p style="margin:0 0 14px 0;color:#374151;">
  Here are a few products we think you’ll love this week.
</p>

<table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="border-collapse:separate;border-spacing:0 12px;">
  <% (products || []).forEach(function(product){ %>
    <tr>
      <td style="background:#ffffff;border:1px solid #f1f5f9;border-radius:14px;padding:14px;">
        <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="border-collapse:collapse;">
          <tr>
            <td style="width:92px;vertical-align:top;">
              <% if (product && product.img) { %>
                <img src="<%= product.img %>" alt="" width="80" height="80" style="display:block;border-radius:12px;object-fit:cover;" />
              <% } %>
            </td>
            <td style="vertical-align:top;padding-left:12px;">
              <div style="font-weight:700;color:#111827;">
                <%= product.title || 'Product' %>
              </div>
              <div style="font-size:13px;color:#6b7280;margin-top:4px;">
                <%= (product.description || '').slice(0, 140) %><%= (product.description || '').length > 140 ? '…' : '' %>
              </div>

              <% if (typeof storeUrl !== 'undefined' && storeUrl && product && product._id) { %>
                <div style="margin-top:12px;">
                  <a href="<%= storeUrl %>/product/<%= product._id %>" style="display:inline-block;background:#c17f59;color:#ffffff;text-decoration:none;padding:10px 14px;border-radius:9999px;font-family:Arial, sans-serif;font-weight:700;font-size:13px;">
                    View product
                  </a>
                </div>
              <% } %>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  <% }) %>
</table>

<p style="margin:16px 0 0 0;color:#374151;">
  Questions? Email
  <a href="mailto:support@cosmo-ticks.com" style="color:#c17f59;text-decoration:none;">support@cosmo-ticks.com</a>.
</p>

<%- include('partials/email-bottom') %>
